<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Pran no</th>
      <th>Employee name</th>
      <th>Employee</th>
      <th>Nlc no</th>
      <th>Pay date</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.pran_no %></td>
        <td><%= employee.employee_name %></td>
        <td><%= employee.employee_id %></td>
        <td><%= employee.nlc_no %></td>
        <td><%= employee.pay_date %></td>
        <td><%= employee.remarks %></td>
        <td><%= link_to 'Show', employee ,:class => "btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) ,:class => "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path ,:class => "btn btn-primary pull-right"%>

<p>
  Download as
  <%= link_to "CSV", employees_path(format: "csv") ,:class => "btn btn-success"%> 
  <%= link_to "Excel", employees_path(format: "xls") ,:class => "btn btn-success"%>
</p>